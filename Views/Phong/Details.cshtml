@model QLKhachSan.Models.Phong

@{
    ViewData["Title"] = "Details";
}

<div class="all-content-wrapper">
    <div class="data-table-area mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline13-list">
                        <div class="sparkline13-graph">
                            <div class="datatable-dashv1-list custom-datatable-overright">
                                <h1>CHI TIẾT PHÒNG</h1> 
                                <table style = "margin-top:2%" id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                    <thead>
                                        <tr>
                                            <th style="width:20%" data-field="id">Mã Phòng</th>
                                            <th style="width:25%" data-field="name" data-editable="true">Tên Phòng</th>
                                            <th style="width:25%" data-field="text" data-editable="true">Số Lượng Giường</th>
											<th style="width:25%" data-field="text" data-editable="true">Mô Tả</th>
                                            <th style="width:25%" data-field="text" data-editable="true">Trạng Thái</th>
											<th style="width:25%" data-field="text" data-editable="true">Loại Phòng</th>
                                            <th data-field="action"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(model => model.PMa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.PTen)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.PSlgiuong)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.PMota)                                    
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.PTrangthai)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => model.LpMaNavigation.LpMa)
                                                </td>
                                                <td>
                                                    <a class="pd-setting-ed" asp-action="Edit" asp-route-id="@Model.PMa"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                                                    <a asp-action="Index"><i class="fa fa-home adminpro-home-admin" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>