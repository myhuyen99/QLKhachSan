@model IEnumerable<QLKhachSan.Models.Giaphong>

@{
    ViewData["Title"] = "Index";
}

<div class="all-content-wrapper">
    <div class="data-table-area mg-tb-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline13-list">
                            <h1>GIÁ PHÒNG</h1>
                        <div class="add-product">
                            <a asp-action="Create">Thêm mới</a>
                        </div>
                        <div class="sparkline13-graph">
                            <div class="datatable-dashv1-list custom-datatable-overright">
                                @* <div id="toolbar">
                                    <select class="form-control">
										<option value="">Export Basic</option>
										<option value="all">Export All</option>
										<option value="selected">Export Selected</option>
									</select>
                                </div> *@
                                <table id="table" data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                    <thead>
                                        <tr>
                                            <th style="width:20%" data-field="id">Mã Giá Phòng</th>
                                            <th style="width:25%" data-field="price" data-editable="true">Giá Phòng Theo Ngày</th>
                                            <th style="width:25%" data-field="price" data-editable="true">Giá Phòng Theo Tuần</th>
											<th style="width:25%" data-field="price" data-editable="true">Giá Phòng Theo Tháng</th>
											<th style="width:25%" data-field="price" data-editable="true">Giá Phòng Qua Đêm</th>
                                            <th data-field="action"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GpMa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GpTheongay)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GpTheotuan)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GpTheothang)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.GpQuadem)
                                                </td>
                                                <td>
                                                    <a data-toggle="tooltip" class="pd-setting-ed" asp-action="Edit" asp-route-id="@item.GpMa"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                                                    <a asp-action="Details" asp-route-id="@item.GpMa"><i class="fa fa-info-circle adminpro-informatio" aria-hidden="true"></i></a> |
                                                    <a data-toggle="tooltip" class="pd-setting-ed" asp-action="Delete" asp-route-id="@item.GpMa"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>